{
  "functions": {
    "runtime": "nodejs22",
    "source": "server"
  },
  "hosting": {
    "public": "server/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      }
    ]
  }
}
